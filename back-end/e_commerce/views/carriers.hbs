{{#if updateCarriers}}

<section style="width: 30rem;" class="m-auto">
    <h1 class="mt-4 mb-4 text-center text-decoration-underline">Modification de la livraison</h1>

<form id="formulaire" class="border border-1 border-dark p-3 rounded-5 mb-3" method="POST"
        enctype="application/x-www-form-urlencoded" action="/carriers/{{carriers.id}}/?_method=put">

        <div class="form-group">
            <label for="exampleFormControlTextarea1">nom du transporteur:</label>
            <input name="name" class="form-control" type="text" value="{{carriers.name}}">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">prix:</label>
            <input name="price" type="text" class="form-control" value="{{carriers.price}}">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">poids mini:</label>
            <input name="minWeight" type="text" class="form-control" value="{{carriers.minWeight}}">
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputPassword1">poids maxi:</label>
            <input name="maxWeight" type="text" class="form-control" value="{{carriers.maxWeight}}">
        </div>
        {{#if errors}}
        <div class="row justify-content-center">
            <article>
                <ul class="list-group">
                    {{#each errors}}
                    <li class="list-group-item list-group-item-danger mb-3">{{this.msg}}</li>
                    {{/each}}
                </ul>
            </article>
        </div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>

</section>

