<div class="container">
    <div class="col-md-6 mx-auto my-3">
        <div class="card text-center">
            <div class="card-header bg-secondary bg-opacity-50">
                <h3>{{#if user}}Modification du profil{{else}}Nouvel utilisateur{{/if}}</h3>
            </div>
            <div class="card-body">
                <form {{#if user}}action="/user/update/{{user.id}}"{{else}}action="/user/register"{{/if}} method="POST">
                    <div class="form-group mb-2">
                        <input type="text" name="firstname" class="form-control" placeholder="Prénom" {{#if user}}value="{{user.firstname}}"{{else}}{{/if}} autofocus>
                    </div>
                    <div class="form-group mb-2">
                        <input type="text" name="lastname" class="form-control" placeholder="Nom" {{#if user}}value="{{user.lastname}}"{{else}}{{/if}} autofocus>
                    </div>
                    {{#if user}}
                    {{else}}
                    <div class="form-group mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Adresse email">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Mot de passe">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" name="confPassword" class="form-control" placeholder="confirme le mot de passe">
                    </div>
                    {{/if}}
                    <div class="form-group mb-3">
                        <input type="tel" name="phone" class="form-control" placeholder="Téléphone" {{#if user}}value="{{user.phone}}"{{else}}{{/if}}>
                    </div>
                    <div class="form-group">
                        <button class="d-grid col-12 btn btn-primary btn-block" type="submit">
                            {{#if user}}Modifier{{else}}S'enregistrer{{/if}}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>