<section class="container mb-5">
  <div class="pb-2 mt-4 mb-2 border-bottom text-center">
    <h2>Liste des utilisateurs</h2>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID <i class="bi bi-arrow-down-up"></i></th>
            <th>Role <i class="bi bi-arrow-down-up"></i></th>
            <th>Nom <i class="bi bi-arrow-down-up"></i></th>
            <th>Pr√©nom <i class="bi bi-arrow-down-up"></i></th>
            <th>Email <i class="bi bi-arrow-down-up"></i></th>
            <th>Phone <i class="bi bi-arrow-down-up"></i></th>
            <th>Date de modification <i class="bi bi-arrow-down-up"></i></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{id}}</td>
              <td>{{roles.name}}</td>
              <td>{{lastname}}</td>
              <td>{{firstname}}</td>
              <td>{{email}}</td>
              <td>{{phone}}</td>
              <td>{{updatedAt}}</td>
              <td class="text-center">
                <a href="/user/update/{{id}}">
                    <i class="bi bi-pencil-fill"></i>
                </a>
                <a href="/user/delete/{{id}}"
                  onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                    <i class="bi bi-trash-fill"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>