<section style="width: 30rem;" class="m-auto">
    <h1 class="mt-4 mb-4 text-center text-decoration-underline">Connexion</h1>

    <form class="border border-1 border-dark p-3 rounded-5" action="/connexion" method="POST">
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Nom d'utilisateur:</label>
            <input name="name" class="form-control" type="text" placeholder="Nom d'utilisateur">
            <p class="bg-danger">{{error}}</p>
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputPassword1">Mot de passe:</label>
            <input name="password" id="myInput" type="password" class="form-control" id="exampleInputPassword1"
                placeholder="Mot de passe">
             <p class="bg-danger">{{errors}}</p>   
            <input type="checkbox" onclick="myFunction()"> Afficher le mot de passe

        </div>
       
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>

</section>